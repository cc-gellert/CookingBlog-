<% include ./partials/header %>
<div style="width: 75%; margin:auto;">
	<h2>Edit Post</h2>
	<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
		<div class="form-group">
    		<label for="title">Post Title</label>
    		<input type="text" name='post[title]' class="form-control" id="title" value='<%=post.title%>' required>
  		</div>
		<div class="form-group">
    		<label for="image">Image Link</label>
    		<input type="text" name='post[image]' class="form-control" id="image" value='<%=post.image%>' required>
  		</div>
		<div class="form-group">
			<label for="post-content">Post Content</label>
			<textarea class="form-control" id="post-content" rows="7" name='post[body]' required><%=post.body%></textarea>
			<button style="margin-top: 10px" class="btn btn-outline-success">
				Submit Post 
			</button>
	  	</div>
	</form>
</div>

<% include ./partials/footer %> 